<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:layout_centerInParent="true"
    tools:context=".Activity_Recuperar">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_question_mark" />

    <!-- Título -->
    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:text="Recuperación de contraseña"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Ingresa tu correo electrónico. Te enviaremos un código de verificación para restablecer tu contraseña."
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp" />

    <!-- EditText para el Email -->
    <EditText
        android:id="@+id/email3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/textColorPrimary" />

    <!-- Botón de Enviar -->
    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Enviar"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button"
        android:textSize="14sp" />

    <!-- ¿Tienes una cuenta? Inicia sesión -->
    <TextView
        android:id="@+id/have_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="¿Ya tienes una cuenta? "
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp" />

    <!-- Enlace para Iniciar Sesión -->
    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_send"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/have_account_text"
        android:text="Inicia sesión"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>
