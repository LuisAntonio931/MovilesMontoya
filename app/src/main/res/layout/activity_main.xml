<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".LoginActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_logo" />

    <!-- Bienvenido TextView -->
    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="Bienvenido de vuelta"
        android:textColor="@color/textColorPrimary"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Email EditText -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bienvenido"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="Email"
        android:textColorHint="@color/textColorPrimary"
        android:textSize="10dp"
        android:background="@drawable/custom_edit_text"
        android:textColor="@color/textColorPrimary"/>

    <!-- Contraseña EditText -->
    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="Contraseña"
        android:textColorHint="@color/textColorPrimary"
        android:inputType="textPassword"
        android:textSize="10dp"
        android:background="@drawable/custom_edit_text"
        android:textColor="@color/textColorPrimary" />

    <!-- Iniciar sesión Button -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_login"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Iniciar sesión"
        android:background="@drawable/custom_button"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <!-- O inicia sesión por huella -->
    <TextView
        android:id="@+id/fingerprint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="30dp"
        android:text="O inicia sesión por huella"
        android:textSize="14sp"
        android:textColor="@color/textColorSecondary" />

    <!-- Fingerprint Icon -->
    <ImageView
        android:id="@+id/fingerprint_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fingerprint_text"
        android:layout_marginTop="20dp"
        android:src="@drawable/pin_16176892"
        android:contentDescription="Fingerprint Icon" />

    <!-- ¿Todavía no tienes una cuenta? -->
    <TextView
        android:id="@+id/no_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fingerprint_icon"
        android:layout_marginTop="20dp"
        android:text="¿Todavía no tienes una cuenta?"
        android:textColor="@color/textColorSecondary"
        android:textSize="14sp" />

    <!-- Crea una ahora -->
    <TextView
        android:id="@+id/create_account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/no_account_text"
        android:text="Crea una ahora"
        android:textColor="@color/textColorPrimary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- ¿Has olvidado tu contraseña? -->
    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/password_login"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        android:text="¿Has olvidado tu contraseña?"
        android:textAllCaps="false"
        android:textColor="@color/textColorSecondary"
        android:textSize="10sp"
        android:background="@drawable/button_rec" />

</RelativeLayout>
